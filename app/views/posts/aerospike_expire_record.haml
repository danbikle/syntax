import aerospike
config = {'hosts': [('127.0.0.1',3000)]}
client = aerospike.client(config).connect()

mynamspace = 'test'
myset      = 'secrets'
myrecname  = 'msg100'
myrecpk    = 100
foodbin    = 'Lasagna is for dinner'

myrecord   = {'myrecname': myrecname, 'foodbin': foodbin}

keytuple   = (mynamspace,myset,myrecpk)

client.put(keytuple, myrecord)


