    %hr/
    / The div.d3chart element is acted upon by D3.js:
    .d3chart
    :javascript
      var data = [4, 8, 15, 16, 23, 42];
      var x = d3.scale.linear()
          .domain([0, d3.max(data)])
          .range([0, 800]);
      d3.select(".d3chart")
        .selectAll("div")
          .data(data)
        .enter().append("div")
          .style("width", function(d) { return x(d) + "px"; })
          .text(function(d) { return d; });
